@{
    ViewData["Title"] = "identifyAreas";
}

<html lang="en">
<head>
    <style>
        .col_display{
            display:flex;
            justify-content:space-between;
        }

        .main-container {
            display: flex;
            flex-direction: row;
            align-items: center;
            justify-content: space-between;
        }

        .center-content {
            justify-content: center; /* Center vertically */
            height: 100vh; /* Adjust as needed */
        }

        /* Adjust the styles for the draggable and droppable elements */
        .draggable {
            border-radius: 10px;
            width: 250px;
            height: 45px;
            border: 1px solid black;
            display: flex; /* Enable flexbox */
            justify-content: center; /* Center children horizontally */
            align-items: center;
            margin: 5px;
        }


        .droppable {
            border-radius: 10px;
            width: 275px;
            height: 75px;
            border: 1px solid black;
            background-color: lightblue;
            display: flex; /* Enable flexbox */
            justify-content: center; /* Center children horizontally */
            align-items: center;
            margin: 5px;
        }

        .block {
            border-radius: 10px;
            width: 250px;
            height: 75px;
            border: 1px solid black;
            display: flex; /* Enable flexbox */
            justify-content: center; /* Center children horizontally */
            align-items: center;
            margin: 5px;
        }

        .correct-answer {
            /* Change the background color to green */
            background-color: #00FF00;
        }

        .wrong-answer {
            /* Change the background color to red */
            background-color: #FF0000;
        }

    </style>
</head>

<body>
    
    <h4 class="display-5">Identify the areas that these numbers belong to.</h4>
    <div class="main-container">

    <div class="col_display center-content">

        <div>
            @{int count = 0;
                foreach (var item in Model)
                {
                    if (count<4)
                    {
                                <div id="@("draggable" + item.Key)" class="draggable" draggable="true" ondragstart="drag(event)">
                                    <p>@item.Key</p>
                                </div>
                     count++;
                    }
                }
            }
        </div>
        <br />
        <br />

        <div>
            @{
                foreach (var item in Model)
                {
                               <div id="@("draggable" + item.Value)" class="droppable" ondrop="drop(event)" ondragover="allowDrop(event)">
                                   <p></p>
                               </div>  
                }
            }
        </div>
        <br />
        <br />

        <div>
            @{
                int count2 = 0;
                foreach (var item in Model)
                {
                    if (count2 < 7)
                    {
                                    <div id="@("block" + item.Value)" class="block">
                                        <p>@item.Value</p>
                                    </div>
                        count2++;
                    }
                }
            }
        </div>


            <div style="margin-left: 30px; justify-content: center;">
                <button id="checkButton" class="btn btn-primary" style="margin: 30px;">CHECK</button>
            <form asp-action="goAgain" method="post">
                <input type="submit" id="nextlevelButton" class="btn btn-primary" value="GO AGAIN" style="margin: 30px;" disabled />
            </form>
        </div>

    </div>
    
  </div>
</body>

</html>

@section Scripts{
    <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>
    <script>

        function allowDrop(ev) {
            ev.preventDefault();
        }

        function drag(ev) {
            ev.dataTransfer.setData("text", ev.target.id);
        }

        function drop(ev) {
            ev.preventDefault();
            var data = ev.dataTransfer.getData("text");
            ev.target.appendChild(document.getElementById(data));
            console.log(data);
        }


        document.getElementById('checkButton').addEventListener('click', function () {
            var droppables = document.getElementsByClassName('droppable');
            var blocks = document.getElementsByClassName('block');
            var data = {};
            for (var i = 0; i < droppables.length; i++) {
                if (droppables[i].hasChildNodes()) {
                    // Get the id of the first child node of the droppable element
                    try {
                        var id = droppables[i].childNodes[3].id;
                        // Remove the "draggable" part of the id to get the original data
                        var originalData = id.replace("draggable", "");
                        // Add the originalData as a key and the corresponding block as its value
                        if (originalData) {
                            var blockId = blocks[i].id
                            data[originalData] = blockId.replace("block", "");;
                        }
                    } catch (error) {
                        console.log("Error reading id: ", error);
                        continue;
                    }
                }
            }
            console.log(data);

            // Send data to backend
            $.ajax({
                url: '/Home/checkIdentfiedArea', // Replace with your URL
                type: 'POST',
                data: JSON.stringify(data),
                contentType: 'application/json',
                success: function (response) {
                    // Handle success here
                    console.log(response);
                    if (response.success == true) {
                        document.body.classList.add("correct-answer");
                        setTimeout(function () {
                            document.body.classList.remove("correct-answer");
                        }, 3000);
                    } else { 
                        document.body.classList.add("wrong-answer");
                        setTimeout(function () {
                            document.body.classList.remove("wrong-answer");
                        }, 2000);
                    }
                },
                error: function (error) {
                    // Handle error here
                    
                    console.log(error);
                }


            });


        });
    </script>
}