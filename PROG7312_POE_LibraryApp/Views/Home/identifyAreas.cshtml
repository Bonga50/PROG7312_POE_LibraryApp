@{
    ViewData["Title"] = "identifyAreas";
}

<html lang="en">
<head>
    <style>
        .col_display{
            display:flex;
            justify-content:space-between;
        }

        .center-content {
            justify-content: center; /* Center vertically */
            height: 100vh; /* Adjust as needed */
        }

        /* Adjust the styles for the draggable and droppable elements */
        .draggable {
            border-radius: 10px;
            width: 250px;
            height: 45px;
            border: 1px solid black;
            display: flex; /* Enable flexbox */
            justify-content: center; /* Center children horizontally */
            align-items: center;
            margin: 5px;
        }


        .droppable {
            border-radius: 10px;
            width: 275px;
            height: 75px;
            border: 1px solid black;
            background-color: lightblue;
            display: flex; /* Enable flexbox */
            justify-content: center; /* Center children horizontally */
            align-items: center;
            margin: 5px;
        }

        .block {
            border-radius: 10px;
            width: 250px;
            height: 75px;
            border: 1px solid black;
            display: flex; /* Enable flexbox */
            justify-content: center; /* Center children horizontally */
            align-items: center;
            margin: 5px;
        }

    </style>
</head>

<body>
    <h4 class="display-5">Identify the areas that these numbers belong to.</h4>
    <div class="col_display center-content">

        <div>
            @{int count = 0;
                foreach (var item in Model)
                {
                    if (count<4)
                    {

                    <div class ="draggable">
                        <p>@item.Key</p>
                    </div>
                     count++;
                    }
                }
            }
        </div>
        <br />
        <br />

        <div>
            @{
                count = 0;
                foreach (var item in Model)
                {
                    if (count < 7)
                    {
                        <div class="droppable">
                            <p>empty</p>
                        </div>
                        count++;
                    }
                }
            }
        </div>
        <br />
        <br />

        <div>
            @{
                int count2 = 0;
                foreach (var item in Model)
                {
                    if (count2 < 7)
                    {
                        <div class="block">
                            <p>@item.Value</p>
                        </div>
                        count2++;
                    }
                }
            }
        </div>
        <br />
        <br />


    </div>
    <div>
        <button id="checkButton" class="btn btn-primary">CHECK</button>
        <form asp-action="NextLevel" method="post">
            <input type="submit" id="nextlevelButton" class="btn btn-primary" value="NEXT LEVEL" style="margin-left: 10px;" disabled />
        </form>
    </div>

</body>

</html>

@section Scripts{
    <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>
    <script>

        function allowDrop(ev) {
            ev.preventDefault();
        }

        function drag(ev) {
            ev.dataTransfer.setData("text", ev.target.id);
        }

        function drop(ev) {
            ev.preventDefault();
            var data = ev.dataTransfer.getData("text");
            ev.target.appendChild(document.getElementById(data));
            console.log(data);
        }
    </script>
}