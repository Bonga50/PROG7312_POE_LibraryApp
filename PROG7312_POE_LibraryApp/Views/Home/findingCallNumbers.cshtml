@{
    ViewData["Title"] = "findingCallNumbers";
}

<html>
    <head>

    </head>
    <body>
    <h4 class="display-5">Find the correct call number</h4>

    <p>@ViewBag.SelectedCallnumber.description</p>

    @{
    foreach (var item in Model)
        {
            <div class="form-check">
                <input type="radio" class="form-check-input" id="rad+@(item.callNumber)" name="optradio" value="@(item.callNumber)" checked> @(item.callNumber) @(item.description)
                <label class="form-check-label" for="radio1"></label>
            </div>
        }
    }

    <button id="checkButton" class="btn btn-primary" style="margin: 30px;">CHECK</button>

    <form asp-action="findingCallNumbersNextLevel" method="post">
        <input type="submit" id="goAgainButton" class="btn btn-primary" value="AGAIN" disabled  />
    </form>
    </body>
</html>

@section Scripts{
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#checkButton").click(function () {
                var selectedValue = $("input[name='optradio']:checked").val();
                $.ajax({
                    url: '/Home/checkFindingCallNumbers',
                    type: 'POST',
                    data: { selectedValue: selectedValue },
                    success: function (response) {
                        // Handle the response here
                        console.log(response);
                        if (response.success === true) {
                            // Call another IActionResult method here
                            document.getElementById('goAgainButton').disabled = false;
                        }
                    }
                });
            });
        });
    </script>
}